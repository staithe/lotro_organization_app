<%= form_with(model: npc, local: true) do |form| %>
  <% if npc.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(npc.errors.count, "error") %> prohibited this npc from being saved:</h2>

      <ul>
        <% npc.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :level %>
    <%= form.number_field :level %>
  </div>

  <div class="field">
    <%= form.label :kind_id %>
    <%= form.collection_select :kind_id, Kind.all , :id, :name, :prompt => "Choose Kind" %>	
  </div>

  <div class="field">
    <%= form.label :drop_id %>
    <%= form.text_field :drop_id %>
  </div>

  <div class="field">
    <%= form.label :location_id %>
    <%= form.collection_select :location_id, Location.all , :id, :name, :prompt => "Choose Location" %>
  </div>

  <div class="field">
    <%= form.label :morale %>
    <%= form.number_field :morale %>
  </div>

  <div class="field">
    <%= form.label :power %>
    <%= form.number_field :power %>
  </div>

  <div class="field">
    <%= form.label :deed_id %>
    <%= form.collection_select :deed_id, Deed.all , :id, :name, :prompt => "Choose Deed" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
